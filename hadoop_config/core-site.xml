<configuration>

  <!-- Temporary working dir for Hadoop -->
  <property>
    <name>hadoop.tmp.dir</name>
    <value>/opt/hadoop/data/tmp</value>
    <description>Where Hadoop will place all of its working files</description>
  </property>

  <!-- Default filesystem: point to namenode on DEFAULT NN port (8020) -->
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://namenode:8020</value>
    <description>Where HDFS NameNode can be found on the network</description>
  </property>

  <!-- These proxyuser properties are optional; you can keep or remove them -->
  <property>
    <name>hadoop.proxyuser.hduser.groups</name>
    <value>*</value>
  </property>

  <property>
    <name>hadoop.proxyuser.hduser.hosts</name>
    <value>*</value>
  </property>

</configuration>